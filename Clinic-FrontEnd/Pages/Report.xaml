        <Label Content="Patient" HorizontalAlignment="Left" Margin="399,233,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="617,237,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="109"/>
