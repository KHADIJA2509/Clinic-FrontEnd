                <StackPanel Orientation="Horizontal" Margin="20" >
                    <TextBlock Text="Treatment Plan Stage" Width="150"/>
                    <ComboBox Width="150" Height="16">
                        <!-- Add location-related items here -->
                    </ComboBox>
                </StackPanel>

                <!-- Additional TextBlock for "Doctor Notes" -->
                <TextBlock Text="Doctor Notes" Margin="20,10,0,0"/>
                <TextBox Width="322" Height="100" VerticalScrollBarVisibility="Auto" Margin="0,10,0,20" />

                <StackPanel Orientation="Horizontal" Height="16" Width="270">
                    <TextBlock Text="
Patient improvement rate" Width="143"/>
